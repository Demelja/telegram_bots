function getMe() {
  var url = telegramUrl + '/getMe';
  var responce = UrlFetchApp.fetch(url);
  Logger.log(responce.getContentText());
}

function setWebhook() {
  var url = telegramUrl + '/setWebhook?url=' + webAppUrl;
  var responce = UrlFetchApp.fetch(url);
  Logger.log(responce.getContentText());
}

